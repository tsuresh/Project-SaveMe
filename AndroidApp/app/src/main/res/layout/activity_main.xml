<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="saveme.sureshm.com.saveme.MainActivity"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="#303F9F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54" >

        <ImageButton
            android:id="@+id/weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Weather Around Me"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/weather"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>

        <ImageButton
            android:id="@+id/road"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Road Accident Reporting"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/road"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54" >

        <ImageButton
            android:id="@+id/fire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Report Fire"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/fire"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>

        <ImageButton
            android:id="@+id/thief"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Report thief"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/thief"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54" >
        <ImageButton
            android:id="@+id/aroundme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Emergencies around mer"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/aroundme"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>

        <ImageButton
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="About App"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/about"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/updateprofile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="19dp"
        android:background="#000"
        android:textColor="#fff"
        android:layout_weight="1.00"/>

    <Button
        android:id="@+id/iotconnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect IOT"
        android:textSize="19dp"
        android:background="#000"
        android:textColor="#fff"
        android:layout_weight="1.00"/>
    </LinearLayout>

</LinearLayout>
